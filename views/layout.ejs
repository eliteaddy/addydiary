    <script type="text/javascript">
      function changeAlias() {
        var title = $.trim($("#the_title").val());
        title = title.replace(/[^a-zA-Z0-9-]+/g, "-");
        $("#the_url").val(title.toLowerCase());
      }

      function changeDesc() {
        var desc = $.trim($("#postbody").val());
        $("#postdes").val(desc.toLowerCase());
      }
    </script>
